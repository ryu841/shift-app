<%= javascript_importmap_tags "ticket_modal" %>
<%= javascript_importmap_tags "cancel_modal" %>

<div class="space-y-6 w-3/4 max-w-lg">
  <label class="block text-xl font-bold text-gray-700">シフト詳細</label>
    <div class="items-center justify-center">
        <div tabindex="0" class="focus:outline-none mb-7 bg-white p-6 shadow rounded">
          <div class="flex items-center border-b border-gray-200 pb-6">
            <div class="flex items-start justify-between w-full">
              <div class="pl-3">
                <p class="focus:outline-none text-lg font-medium leading-5 text-gray-800"><%= link_to @shift.title_date, shift_path(@shift) %></p>
                <p class="focus:outline-none text-sm leading-normal pt-2 text-gray-500">by 店長</p>
              </div>
              <div class="flex items-center">
                <% if admin_signed_in? %>
                  <% if @shift.admin_id == current_admin["id"] %>
                    <%= link_to '編集', edit_shift_path(@shift), class: "text-sm bg-transparent hover:bg-green-500 text-green-700 hover:text-white py-1 px-3 border border-green-500 hover:border-transparent rounded mr-2" %>
                  <% end %>
                  <% if @shift.admin_id == current_admin["id"] %>
                    <%= button_to '削除', shift_path(@shift), method: :delete, class: "text-sm bg-transparent hover:bg-red-500 text-red-700 hover:text-white py-1 px-3 border border-red-500 hover:border-transparent rounded" %>
                  <% end %>
              <% end %>
              </div>
            </div>
          </div>
          <% @shortfalls.each_with_index do |shortfall, index| %>
            <% if shortfall.start_time.present? %>
              <div class="p-3 border border-gray-300 rounded-md shadow-sm bg-gray-50 mt-2 flex justify-between gap-1">
                <p class="text-gray-700 font-semibold">
                  <%= "不足時間 #{index + 1} : " %>
                </p>
                <p class="text-gray-700 font-semibold">
                  <%= "#{shortfall.start_time&.strftime("%H:%M")} ~ #{shortfall.end_time&.strftime("%H:%M")}" %>
                </p>
                <p class="text-gray-700 font-semibold">
                  <%= "#{shortfall.require_count}名" %>
                </p>
                <% if @ticket %>
                  <button id="cancel-button" class="text-sm bg-transparent hover:bg-red-500 text-red-700 hover:text-white py-1 px-3 border border-red-500 hover:border-transparent rounded" >
                    キャンセルする
                  </button>
                  <div id="cancel-modal" class="fixed inset-0 z-50 hidden bg-gray-800 bg-opacity-50 flex items-center justify-center">
                    <div class="bg-white rounded-lg shadow-lg w-96 p-6">
                      <h2 class="text-xl font-bold mb-4 text-gray-700">参加申請をキャンセルしますか？</h2>
                      <div class="flex justify-end space-x-4">
                        <button type="button" id="modal-cancel" class="py-2 px-4 bg-gray-500 text-white rounded hover:bg-gray-700" >
                          キャンセル
                        </button>
                        <%= button_to "送信", shift_ticket_path(@shift, @ticket, type: "cancel"), method: :delete, class: "py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-700" %>
                      </div>
                    </div>
                  </div>
                <% elsif user_signed_in? %>
                  <button id="ticket-button", class="text-sm bg-transparent hover:bg-green-500 text-green-700 hover:text-white py-1 px-3 border border-green-500 hover:border-transparent rounded">
                    参加する
                  </button>
                <% end %>
                <div id="ticket-modal" class="fixed inset-0 z-50 hidden bg-gray-800 bg-opacity-50 flex items-center justify-center">
                  <div class="bg-white rounded-lg shadow-lg w-96 p-6">
                    <div class="flex mb-4 text-gray-700">
                      <h2 class="text-xl font-bold">参加コメント</h2>
                      <p class="text-sm items-center flex">（50文字以内）</p>
                    </div>
                    <%= form_with model:@shift.tickets.build, url: shift_tickets_path(@shift), local: true do |f| %>
                      <%= f.hidden_field :shortfall_id, value: shortfall.id %>
                      <div class="mb-4">
                        <%= f.text_area :comment, rows: 4, id: 'comment-field', class: "w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring focus:ring-indigo-300", placeholder: "コメントを入力してください" %>
                        <div id="comment-error" class="text-red-500 text-sm mt-1 hidden">コメントは50文字以内で入力してください。</div>
                      </div>
                      <div class="flex justify-end space-x-4">
                        <button type="button" id="modal-cancel" class="py-2 px-4 bg-gray-500 text-white rounded hover:bg-gray-700" >
                          キャンセル
                        </button>
                        <%= f.submit "送信", id: "submit-button", class: "py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-700" %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
          <div class="px-2">
            <p class="focus:outline-none text-sm leading-5 py-4 text-gray-600"><%= @shift.comment %></p>
          </div>
        </div>
    </div>
</div>